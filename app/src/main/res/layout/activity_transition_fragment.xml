<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_transition_fragment"
    android:gravity="center"
    android:orientation="vertical">


    <Button
        android:id="@+id/activity_transition_fragment_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_transition_fragment_button" />

    <Button
        android:id="@+id/activity_transition_fragment_shared_element"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/activity_transition_fragment_button_shared" />

    <ImageView
        android:id="@+id/view_to_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:transitionName="imageToShare"
        android:src="@mipmap/ic_launcher" />
</LinearLayout>