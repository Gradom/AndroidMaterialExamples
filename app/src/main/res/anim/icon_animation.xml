<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:interpolator="@android:anim/linear_interpolator"
    android:ordering="sequentially"
    android:shareInterpolator="false">

    <objectAnimator
        android:duration="1000"
        android:propertyName="pathData"
        android:valueFrom="M0,25 l0,0 l0,0 l0,0 l0,0"
        android:valueTo="M0,25 l25,25 l0,0 l0,0 l0,0"
        android:valueType="pathType" />
    <objectAnimator
        android:duration="1000"
        android:propertyName="pathData"
        android:valueFrom="M0,25 l25,25 l0,0 l0,0 l0,0"
        android:valueTo="M0,25 l25,25 l25,-25 l0,0 l0,0"
        android:valueType="pathType" />
    <objectAnimator
        android:duration="1000"
        android:propertyName="pathData"
        android:valueFrom="M0,25 l25,25 l25,-25 l0,0 l0,0"
        android:valueTo="M0,25 l25,25 l25,-25 l-25,-25 l0,0"
        android:valueType="pathType" />
    <objectAnimator
        android:duration="1000"
        android:propertyName="pathData"
        android:valueFrom="M0,25 l25,25 l25,-25 l-25,-25 l0,0"
        android:valueTo="M0,25 l25,25 l25,-25 l-25,-25 l-25,25"
        android:valueType="pathType" />
</set>